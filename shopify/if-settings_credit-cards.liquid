<!-- Don't forget in the assets folder to include the icons -->

<!-- theme.liquid -->

{% if settings.show_amex or settings.show_discover or settings.show_visa or settings.show_mastercard or settings.show_maestro or settings.show_cirrus or settings.show_paypal or settings.show_google %}
<div id="payment-methods">
{% if settings.show_amex %}{{ 'cc-amex.png' | asset_url | img_tag: 'We accept Amex' }}{% endif %}
{% if settings.show_discover %}{{ 'cc-discover.png' | asset_url | img_tag: 'We accept Discover' }}{% endif %}
{% if settings.show_visa %}{{ 'cc-visa.png' | asset_url | img_tag: 'We accept Visa' }}{% endif %}
{% if settings.show_mastercard %} {{ 'cc-mastercard.png' | asset_url | img_tag: 'We accept Mastercard' }}{% endif %}
{% if settings.show_maestro %}{{ 'cc-maestro.png' | asset_url | img_tag: 'We accept Maestro' }}{% endif %}
{% if settings.show_cirrus %}{{ 'cc-cirrus.png' | asset_url | img_tag: 'We accept Cirrus' }}{% endif %}
{% if settings.show_paypal %}{{ 'cc-paypal.png' | asset_url | img_tag: 'You can check out using Paypal' }}{% endif %}
{% if settings.show_google %}{{ 'cc-google.png' | asset_url | img_tag: 'You can check out using Google Wallet' }}{% endif %}
</div>
{% endif %}

<!-- settings.html -->

<fieldset>
    <h3>Payment methods:</h3>
    <table class="standard-table">
        <tr>
            <td>
                <input type="checkbox" id="show_amex" name="show_amex" value="1" checked="checked" />
                <label for="show_amex">American Express</label>
            </td>
            <td>
                <input type="checkbox" id="show_discover" name="show_discover" value="1" checked="checked" />
                <label for="show_discover">Discover</label>
            </td>
            <td>
                <input type="checkbox" id="show_visa" name="show_visa" value="1" checked="checked" />
                <label for="show_visa">Visa</label>
            </td>
        </tr>
        <tr>
            <td>
                <input type="checkbox" id="show_mastercard" name="show_mastercard" value="1" checked="checked" />
                <label for="show_mastercard">Mastercard</label>
            </td>
            <td>
                <input type="checkbox" id="show_maestro" name="show_maestro" value="1" checked="checked" />
                <label for="show_maestro">Maestro</label>
            </td>
            <td>
                <input type="checkbox" id="show_cirrus" name="show_cirrus" value="1" checked="checked" />
                <label for="show_cirrus">Cirrus</label>
            </td>
        </tr>
        <tr>
            <td>
                <input type="checkbox" id="show_paypal" name="show_paypal" value="1" checked="checked" />
                <label for="show_paypal">Paypal</label>
            </td>
            <td colspan="2">
                <input type="checkbox" id="show_google" name="show_google" value="1" checked="checked" />
                <label for="show_google">Google Wallet</label>
            </td>
        </tr>
    </table>
</fieldset>